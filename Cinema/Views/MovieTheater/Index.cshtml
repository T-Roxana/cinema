@model Cinema.ViewModels.MovieTheaters.MovieTheaterViewModel

@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-dark mb-3" style="color: white; cursor: pointer;" asp-action="Create">Create Movie Theater</a>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Number Seats</th>
            <th scope="col">Status</th>
            <th scope="col" style="width: 130px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movieTheater in Model.MovieTheaters)
        {
            <tr>
                <th>@movieTheater.Name</th>
                <td>@movieTheater.NumberOfSeats</td>
                @if (movieTheater.IsActive)
                {
                    <td>Active</td>
                }
                else
                {
                    <td>Inactive</td>
                }
                <td>
                    <a style="color: white;" asp-action="Edit" asp-route-id="@movieTheater.Id">Edit</a> |
                    <a style="color: white;" asp-action="SeeMap" asp-route-id="@movieTheater.Id">See Map</a>
                </td>
            </tr>
        }
    </tbody>
</table>
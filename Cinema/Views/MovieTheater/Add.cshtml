@model Cinema.ViewModels.MovieTheaters.AddMovieTheaterViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="NumberOfRows" class="control-label"></label>
                <input asp-for="NumberOfRows" class="form-control" />
                <span asp-validation-for="NumberOfRows" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="NumberOfColumns" class="control-label"></label>
                <input asp-for="NumberOfColumns" class="form-control" />
                <span asp-validation-for="NumberOfColumns" class="text-danger"></span>
            </div>
            <input type="submit" value="Add" class="btn btn-secondary" />
        </form>
    </div>
</div>

@model Cinema.ViewModels.Programs.CreateProgramViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create program</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input hidden asp-for="MovieId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column" style="width: 450px;">
                <label asp-for="MovieTheaters" class="control-label"></label>
                <select asp-for="MovieTheaterId" class="form-control">
                    @foreach (var mt in Model.MovieTheaters)
                    {
                        <option value="@mt.Id">@mt.Name</option>
                    }
                </select>
                <span asp-validation-for="MovieTheaters" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-secondary" />
        </form>
    </div>
</div>


